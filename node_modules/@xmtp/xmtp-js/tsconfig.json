{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom"],
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
      "@bench/*": ["./bench/*"],
      "@test/*": ["./test/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2021",
    "types": ["vitest/globals"]
  },
  "include": [
    "src",
    "bench",
    "test",
    "rollup.config.bench.js",
    "rollup.config.js",
    "vitest.config.ts"
  ]
}
